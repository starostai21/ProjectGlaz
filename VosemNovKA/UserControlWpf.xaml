<UserControl x:Class="VosemNovKA.UserControlWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VosemNovKA"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>

        <DataGrid x:Name="grid" HorizontalAlignment="Left" Height="Auto" Margin="0,0,0,0" VerticalAlignment="Top" Width="Auto"  Loaded="grid_Loaded" MouseUp="grid_MouseUp">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Новая запись" Click="ContextMenu_insert"/>
                    <Separator />
                    <MenuItem Header="Изменить" Click="ContextMenu_updeit"/>
                    <Separator />
                    <MenuItem Header="Удалить" Click="ContextMenu_delit"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            
        </DataGrid>
 
    </Grid>
</UserControl>
